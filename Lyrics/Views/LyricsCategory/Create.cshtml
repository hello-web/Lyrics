@model Lyrics.Models.LyricsCategoryTable

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
}

<div class="main">
    <div class="hipsum">


        <div class="jumbotron">
            <div class="btn-group  pull-right">

                <a href="/LyricsCategory/Index" class="btn btn-sm btn-success ">Category List</a>`
                <a href="/Lyrics/CreateLyrics" class="btn btn-sm btn-success">Create New Lyric</a>`

            </div>
            @using (Html.BeginForm("Create", "LyricsCategory", FormMethod.Post, new { @class = "form-horizontal" }))
            {


                <fieldset>
                    <legend>Lyrics Category </legend>

                    <div class="form-group">
                        <label for="Title" class="col-lg-3 control-label">Category Name</label>
                        <div class="col-lg-9">
                            @Html.TextBox("category_name", "", new { @class = "form-control", @placeholder = "category name", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
